# =====================================================
# DATABASE CONFIGURATION
# Configurazione del database PostgreSQL per ISRU Metrics
# =====================================================

# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=isru_metrics
DB_USER=postgres
DB_PASSWORD=your_password_here

# SSL Configuration
DB_SSL=false

# Connection Pool Settings
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Migration Settings
MIGRATION_AUTO_BACKUP=true
MIGRATION_CLEAR_LOCALSTORAGE=false

# Production Database Settings (quando deploy in produzione)
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# =====================================================
# DEVELOPMENT SETTINGS
# =====================================================

# Per sviluppo locale, puoi usare:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=isru_metrics_dev
# DB_USER=postgres
# DB_PASSWORD=dev_password

# =====================================================
# PRODUCTION SETTINGS (da configurare nel deploy)
# =====================================================

# Per produzione, configura queste variabili nel tuo hosting provider:
# DB_HOST=your-production-db-host
# DB_PORT=5432
# DB_NAME=isru_metrics_prod
# DB_USER=your_prod_user
# DB_PASSWORD=your_secure_password
# DB_SSL=true

# =====================================================
# VERCEL DEPLOYMENT
# =====================================================

# Se usi Vercel con PostgreSQL (es. Neon, Supabase, Railway):
# DATABASE_URL=postgresql://user:password@host.com:5432/dbname?sslmode=require

# =====================================================
# HEROKU DEPLOYMENT
# =====================================================

# Heroku fornisce automaticamente DATABASE_URL
# Non serve configurare altre variabili se usi Heroku Postgres

# =====================================================
# DOCKER COMPOSE
# =====================================================

# Se usi Docker Compose per sviluppo:
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=isru_metrics
# DB_USER=postgres
# DB_PASSWORD=postgres_password
